@{ 
    Layout = null;
}
@model LoginModel

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" name="viewport"/>
    <link rel="stylesheet" href="~/lib/tether/dist/css/tether.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/AdminLTE.css" />
    <link rel="stylesheet" href="~/lib/iCheck/skins/square/blue.css"/>
    <link rel="stylesheet" href="~/css/login.css"/>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <div class="login-box-body">
                <a href="https://github.com/xxc740" target="_blank">
                    <img src="~/img/login_logo.png" />
                </a>
                <p class="login-box-msg" style="font-size:20px;">Authority Management System</p>
                <form asp-controller="Login" asp-action="Index" method="post" onsubmit="onSubmit()">
                    <div class="form-group has-feedback">
                        <label for="username" class="sr-only">username</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" asp-for="UserName" class="form-control input-lg" placeholder="username"  autocomplete="off" />
                        </div>
                    </div>

                    <div class="form-group has-feedback">
                        <label for="password" class="sr-only">password</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input type="password" asp-for="Password" class="form-control input-lg" placeholder="password"  autocomplete="off"/>
                        </div>
                    </div>
                   
                    <button type="submit"  id ="btnLogin" class="btn btn-primary btn-block  btn-flat">Sign In</button>

                    <div class="row links">
                        <div class="col-md-7">
                            <div class="checkbox icheck">
                                <label>
                                    <input asp-for="RememberMe" type="checkbox"> Remember me
                                </label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <a href="#">Forgot your Password?</a>
                        </div>
                    </div>
                </form>
                <input id="errorInfo" type="hidden" value="@ViewBag.ErrorInfo"/>
            </div>
        </div>
    </div>
    <script src="~/lib/jQuery/dist/jquery.js"></script>
    <script src="~/lib/tether/dist/js/tether.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/iCheck/icheck.js"></script>
    <script src="~/lib/layer/src/layer.js"></script>
    <script src="~/lib/js-cookie/src/js.cookie.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>