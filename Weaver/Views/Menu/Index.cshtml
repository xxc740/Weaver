<div class="row">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    Functional Management
                </h3>
                <div class="box-body">
                    <div id="TreeDiv" class="protlet-body"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Function List</h3>
                <div class="pull-right box-tools">
                    <button id="btnAddRoot" class="btn btn-primary" type="button" data-original-title="AddRoot" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;Add Root
                    </button>
                    <button id="btnAdd" title="" class="btn btn-primary" type="button" data-original-title="Add" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-circle"></i>&nbsp;&nbsp;Add
                    </button>
                    <button id="btnDelete" class="btn btn-danger" type="button" data-original-title="Delete" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;Delete
                    </button>
                    <button id="btnLoadRoot" title="" class="btn btn-success" type="button" data-original-title="Load Root" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-list"></i>&nbsp;&nbsp;Load Root
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="orderby">
                        <thead>
                            <tr role="row">
                                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"/></th>
                                <th tabindex="0" aria-label="">Function Name</th>
                                <th tabindex="0" aria-label="">Function Code</th>
                                <th tabindex="0" aria-label="">Address</th>
                                <th tabindex="0" aria-label="">Type</th>
                                <th tabindex="0" aria-label="">Function Description</th>
                                <th tabindex="0" aria-label="">Operation</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                </div>
            </div>
            <div class="paging-toolbar">
                <ul id="grid_paging-part"></ul>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Edit")

